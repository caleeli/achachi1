function ExtJsVersion(){
  if(file_exists( $_SERVER["DOCUMENT_ROOT"]."/ext/ext-all.js" )){
    $ext=file_get_contents($_SERVER["DOCUMENT_ROOT"]."/ext/ext-all.js");
