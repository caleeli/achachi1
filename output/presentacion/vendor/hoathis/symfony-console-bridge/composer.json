{
    "name"       : "hoathis/symfony-console-bridge",
    "description": "The Hoa\\Console to Symfony\\Console bridge.",
    "type"       : "library",
    "keywords"   : ["library", "hoa", "symfony", "console", "bridge"],
    "homepage"   : "http://hoa-project.net/",
    "license"    : "BSD-3-Clause",
    "authors"    : [
        {
            "name": "Julien Bianchi",
            "email": "julien.bianchi@hoa-project.net"
        },
        {
            "name" : "Ivan Enderlin",
            "email": "ivan.enderlin@hoa-project.net"
        },
        {
            "name"    : "Hoa community",
            "homepage": "http://hoa-project.net/"
        }
    ],
    "support": {
        "email" : "support@lists.hoa-project.net",
        "irc"   : "irc://irc.freenode.org/hoaproject",
        "source": "http://git.hoa-project.net/"
    },
    "require": {
        "php"            : ">=5.3.3",
        "hoa/console"    : ">=1.0,<3.0",
        "symfony/console": "~2.3,>=2.3.6|~3.0.0"
    },
    "require-dev": {
        "atoum/atoum": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "Hoathis\\SymfonyConsoleBridge\\": "."
        }
    },
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    }
}
